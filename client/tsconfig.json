{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,

    "baseUrl": ".",
    "module": "esNext",
    "lib": ["es2016", "dom", "es2017.object"],
    "jsx": "react",
    "paths": {
      "*": ["./src/*"]
    },
    "types": ["@emotion/core", "node"]
  },
  "include": ["./src/**/*"],
  "files": ["definitions/assets.d.ts"]
}
